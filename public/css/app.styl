.btn-sb {
	padding: 10px 20px;
	font-size: 13px;
	text-transform: uppercase;
	color: $color_lig_1;
	
	background: $color_red_1;
	border: 2px $color_red_1 solid;
	display: inline-block;
	transition: all 150ms linear;
	text-decoration: none;

	&:hover {
		border-color: $color_red_1;
		color: $color_red_1;
		background: transparent;
		text-decoration: none;
	}

	&.inverse {
		color: $color_lig_1;
		background: transparent;
		border-color: $color_lig_1;

		&:hover {
			border-color: $color_red_1;
			color: $color_red_1;
			background: transparent;
			text-decoration: none;
		}
	}

	&.bl {
		border-color: $color_red_1;
		color: $color_red_1;
		background: transparent;
		text-decoration: none;

		&:hover {
			border-color: $color_dar_2;
			color: $color_dar_2;
			background: transparent;
			text-decoration: none;
		}
	}

}


.btn-link {
	padding: 10px 20px;
	font-size: 13px;
	text-transform: uppercase;
	display: inline-block;
	transition: all 150ms linear;
	text-decoration: none;
}

.form-control {
	padding: 10px 20px;
	font-size: 13px;
	height: auto;
	border: 2px $color_lig_1 solid;
	background: transparent;
	border-color: #ccc;
	border-radius: 0;
	transition: all 150ms linear;

	&:hover, &:focus {
		border-color: $color_red_1;
		color: $color_red_1;
		background: transparent;
		text-decoration: none;
	    outline: 0;
	    box-shadow: 0 0 0 0.2rem rgba(255,0,0,.25);
	}

	&.inverse {
		border-color: $color_red_1;
		color: $color_red_1;
	}


}


