body {
	background: #f5f5f5;
}

$color_red_1 = #EC0000;
$color_red_2 = #EC0000;

$color_dar_1 = #252525;
$color_dar_2 = #101010;

$color_lig_1 = #F2F2F2;

p, a, div {
	font-size: 13px;
	font-family: 'Roboto', sans-serif !important;
	color: #303030;
}

h1, h2, h3, h4, h5, h6 {
	font-family: 'Doppio One', sans-serif !important;
}

.header_top_bar_a {
	border-top: 3px $color_red_1 solid;
	background: rgba(0,0,0,.9);
	color: $color_lig_1;
	ul {
		padding: 0;
		margin: 0;
		@media (max-width: 768px) {
			text-align: left;
		}

		li {
			margin: 0;
			padding: 0;
			display: inline-block;
			line-height: 1;

			.btn, a {
				line-height: 1;
				font-size: 13px;
				color: $color_lig_1;
				padding: 0;
			}

			.btn {
				margin-top: -3px;
			}

			a {
				padding: 10px 13px;
				display: block;
				font-weight: 500;
				text-transform: normal;
				text-decoration: none;

				&:hover {
					background: $color_dar_2;
				}
			}
		}
	}


	.dropdown-menu.show {
	    display: block;
	    min-width: 100%;
	    background: $color_dar_2;
	    border-radius: 0;
	    border: 0;
	    text-align: center;
	    margin-left: 0 !important;

	    a {
	    	color: $color_lig_1;
	    	background: $color_dar_2;

	    	&:hover {
	    		background: $color_red_2;
	    	}
	    }
	}
}

$header_top_bar_b_height = 70px;

.header_top_bar_b {
	background: rgba(0,0,0,.5);
	color: $color_lig_1;

	@media (max-width: 768px) {
		background: $color_red_1;
		text-align: center;
		height: $header_top_bar_b_height !important;
	}

	ul {
		padding: 0;
		margin: 0;
		width: 100%;
		height: $header_top_bar_b_height;
		overflow: hidden;

		li {
			margin: 0;
			padding: 0;
			display: inline-block;
			line-height: 1;
			height: $header_top_bar_b_height;

			.btn, a {
				line-height: 1;
				font-size: 13px;
				color: $color_lig_1;
				padding: 0;
			}

			.btn {
				margin-top: -3px;
			}

			a {
				padding: 27px 13px;
				display: block;
				font-weight: 500;
				text-transform: normal;
				text-decoration: none;
				transition: all 150ms linear;
				margin-left: -3px;
				border-bottom: 3px transparent solid;

				&:hover, &.active {
					background: rgba(0,0,0,.3);
					border-color: $color_red_1;
				}

			}
		}
	}

	.logo {
		height: $header_top_bar_b_height;
	}

	@media (max-width: 768px) {
		.logo {
			margin: 0 auto !important;
			display: inline-block;
		}
	}

	.menu-mobile {
		position: absolute;
		z-index: 10001;
		width: 100%;
		background: rgba(0,0,0,.95);
		min-height: 100vh !important;
		top: 0;
		display: none;

		.logo {
			display: inline-block;
			height: 70px;
			margin: 0 auto !important;
			position: absolute;
			left: 0;
			top: 0;
		}

		.close {
			position: absolute;
			right: 10px;
			top: 0;
			color: $color_lig_1;
			text-shadow: none;
			opacity: 1;
		}

		ul {
			height: auto;
			padding: 0;
			vertical-align: middle;
			display: table-cell;
			width: 100%;

			li {
				display: block;
				padding: 0;
				height: auto;

				a {
					text-align: center;
					padding: 10px;
					font-family: 'Doppio One', sans-serif !important;
					font-size: 22px;

					&.active {
						border-color: transparent;
					}
				}
			}
		}
	}



	.menu-mobile-burger {
		display: block;

		.burger {
			width: 28px;
			height: 40px;
			float: right;
			margin-top: 25px;
			cursor: pointer;

			span {
				display: block;
				width: 100%;
				height: 3px;
				margin-bottom: 5px;
				background: $color_lig_1;
			}
		}
	}

	.menu-mobile-burger {
		display: none;
	}


	@media (max-width: 768px) {
		.menu {
			display: none !important;
			background: red;
		}

		.menu-mobile-burger {
			display: inline-block;
		}

		.logo_content {
		    float: right;
		    position: absolute;
		    right: 0;
		    text-align: right !important;
		}

		.burger_content {
			float: left;
			position: absolute;
			left: 0;
			text-align: left !important;

			.burger {
				float: left !important;
			}
		}

		.header_top_bar_b {

		}

	}

}

.webtobar {
